  },

  "devDependencies": {
    "rimraf": "^6.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.4.0",
    "@expo/vector-icons": "^14.1.0",
    "react-native-select-dropdown": "^4.0.1"
